<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <LinearLayout
            android:orientation="vertical"
            android:gravity="start"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                android:id="@+id/card_view_hitlable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_gravity="center"
                card_view:contentPadding="5dp"
                android:elevation="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="@color/primaryColor"
                    android:textSize="35sp"
                    android:layout_gravity="center"
                    android:text="HITAISHI"/>

            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:id="@+id/card_view_hitimg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                card_view:contentPadding="5dp">

                    <ImageView
                        android:layout_gravity="center"
                        android:id="@+id/hitlogo"
                        android:textSize="15sp"
                        android:layout_width="wrap_content"
                        android:layout_height="225dp"
                        android:onClick="onClick"
                        android:src="@drawable/hit5" />

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card_view_hittext"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                card_view:contentPadding="10dp"
                android:elevation="5dp">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <TextView
                        android:id="@+id/textView"
                        android:textSize="15sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/hittext"
                        android:textColor="#000000"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>


//images here

            <android.support.v7.widget.CardView
                android:id="@+id/card_view_iiieimgs"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                card_view:contentPadding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="220dp"
                        android:src="@drawable/hit3" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="220dp"
                        android:src="@drawable/hit1" />

                </LinearLayout>

            </android.support.v7.widget.CardView>
//images end

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/image"
               android:textSize="15sp"
                android:background="#ffffff"
                android:text="Click Here For Images..."
                android:textColor="@color/primaryColor"
                android:onClick="onClick"/>


            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/start"
                android:textSize="15sp"
                android:background="#ffffff"
                android:text="Click Here For More..."
                android:textColor="@color/primaryColor"
                android:onClick="onClick"/>


        </LinearLayout>
    </ScrollView>
</LinearLayout>
