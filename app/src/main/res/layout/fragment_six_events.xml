<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <LinearLayout
            android:orientation="vertical"
            android:gravity="start"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                android:id="@+id/card_view_hitlable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_gravity="center"
                card_view:contentPadding="5dp"
                android:elevation="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="@color/primaryColor"
                    android:textSize="26sp"
                    android:layout_gravity="center"
                    android:text="NATIONAL CONFERENCE"/>

            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:id="@+id/card_view_techtext"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                card_view:contentPadding="10dp">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <TextView
                        android:id="@+id/textView"
                        android:textSize="15sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/ncrenbtext1"
                        android:textColor="#000000"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            //images here

            <android.support.v7.widget.CardView
                android:id="@+id/card_view_hittextj"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_gravity="center"
                card_view:contentPadding="2dp"
                android:elevation="5dp">

                <LinearLayout
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/g"
                            android:layout_width="match_parent"
                            android:layout_height="250dp"
                            android:src="@drawable/nc2" />



                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:layout_weight="8"
                            android:onClick="notice"
                            android:src="@drawable/nc1" />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:layout_weight="8"
                            android:onClick="courses"
                            android:src="@drawable/nc3" />



                    </LinearLayout>


                </LinearLayout>

            </android.support.v7.widget.CardView>


            //images end


            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/image"
                android:textSize="15sp"
                android:background="#ffffff"
                android:text="Click Here For Images..."
                android:textColor="@color/primaryColor"
                android:onClick="onClick"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/start"
                android:textSize="15sp"
                android:background="#ffffff"
                android:text="Click Here For More..."
                android:textColor="@color/primaryColor"
                android:onClick="onClick"/>


        </LinearLayout>
    </ScrollView>
</LinearLayout>
